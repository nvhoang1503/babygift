.page_content_space
  = render 'steps_nav'
  = simple_form_for @gift, :as => :gift, :url => create_update_gift_gifts_path(:gift_id => params[:gift_id]), :html => {:id => 'gift-info', :class => 'gift-form clearfix' }, :validate => :gift_validator do |f|
    .tittle_content= I18n.t('content.page.gift_1.title')
    .description= I18n.t('content.page.gift_1.desc')
    #left-section.pull-left
      = image_tag 'sample/pic-gift.jpg'
      %a#ln_redeem{:href => '#', :class => 'underline-link capitalize pull-left'}= I18n.t('content.page.gift_1.redeem')
    .form-inputs.pull-left
      .section
        .text.font24
          =I18n.t('content.page.gift_1.recipient')
          %abbr{:title => "required", :style => "color:red;"} *
        = f.input :recipient_email, :as => :string, :label => false, :input_html => {:title => I18n.t('content.page.gift_1.recipient_hint')}
        = f.input :recipient_email_confirm, :as => :string, :label => false, :input_html => {:title => I18n.t('content.page.gift_1.recipient_cfrm_hint'), :value => '' }
      .section
        = f.input :sender_email, :as => :string, :label => I18n.t('content.page.gift_1.sender'), :input_html => {:title => I18n.t('content.page.gift_1.sender_hint')}
        = f.input :sender_email_confirm, :as => :string, :label => false, :input_html => {:title => I18n.t('content.page.gift_1.sender_cfrm_hint'), :value => ''}
      = f.input :note, :as => :text, :label => I18n.t('content.page.gift_1.note'), :required => false, :input_html => {:title => I18n.t('content.page.gift_1.note_hint')}, :wrapper_html => {:class => 'section'}
      = f.submit I18n.t('label.button.continue', :next_step => 'plans'), :id => 'btn-submit', :class => 'mybtn next btn-pink uppercase btn_email_form'
= render 'shared/submit_form', :btn_form => '.btn_email_form'
= content_for :js do
  = yield :gift_validator
  = javascript_include_tag 'libs/jquery.inputHintOverlay.js', 'gifts.js'
