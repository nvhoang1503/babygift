.page_content_space
  = render 'steps_nav'
  = simple_form_for @gift, :url => update_gift_billing_gifts_path(:gift_id => params[:gift_id]), :html => {:class => "gift-form", :id => 'gift-billing'} , :validate => :gift_validator do |f|
    .tittle_content= I18n.t('content.page.enroll_4.title')
    .billing-address.pull-left
      = render 'shared/form_billing', :form_builder => f
    .clearfix
    .form-action.pull-left.shipping_continue
      = f.submit I18n.t('label.button.continue', :next_step => 'payment'), :id => 'btn-submit', :class => 'mybtn next btn-pink uppercase btn_billing_form'
= render 'shared/submit_form', :btn_form => '.btn_billing_form'
= content_for :js do
  = yield :gift_validator
  = javascript_include_tag 'gifts.js'
