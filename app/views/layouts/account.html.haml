%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    = stylesheet_link_tag    "application", :media => "all"
    / = javascript_include_tag "head/application"
    = yield :head

    %title
      = @page_title || I18n.t('titles.pages.name')
  %body
    #page-wrapper
      #header
        = render 'shared/head_tab'
      #container
        #flash-panel
          - flash.each do |key, val|
            - if val.is_a?(Array) && val.any?
              .flash-content{:class => "success page_content_space alert-box #{key}"}
                - val.each do |msg|
                  = content_tag :div, msg unless msg.blank?
            - else
              = content_tag :div, val, :class => "flash-content success page_content_space alert-box #{key}" unless val.blank?
        .page_content_space
          #left-nav.pull-left
            = render 'shared/account_nav'
          #right-content.pull-left
            = yield
      #footer
        = render 'shared/footer'
    = render 'shared/social_media_icon'
    = render 'layouts/js_common'
  = javascript_include_tag "application"
  = yield(:js)
  = javascript_include_tag 'init.js'
