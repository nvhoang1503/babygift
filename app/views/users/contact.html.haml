.contact_information
  .tittle_box
    .tittle_content.uppercase= I18n.t('content.page.account_contact.step')
  .line
  = simple_form_for @user, :as => :user, :url => contact_update_users_path, :html => {:class => 'user-contact-form clearfix' }, :validate => :user_validator do |f|
    .form-inputs
      = f.input :first_name, :wrapper_html => {:class => 'first_name_field'}
      = f.input :last_name, :wrapper_html => {:class => 'last_name_field'}
      = f.input :email, :wrapper_html => {:class => 'email_field'}
      .email_notification_field.clear-fix
        = f.input :email_notification,  :input_html => {:type => 'checkbox', :id => "email_notification"}, :wrapper_html => {:class => 'email_noti_check'}, :label_html => {:class => 'clear-fix'        }
      .pass_change
        %label Password
        = link_to "Change password" , edit_password_users_path, :class => "mybtn btn-green btn_pass_change"

    .action-form
    = f.button :submit, I18n.t('content.page.account_contact.save') , :class => "mybtn btn-pink uppercase btn_contact_info"

= content_for :js do
  = yield :user_validator
  = javascript_include_tag 'users.js'
