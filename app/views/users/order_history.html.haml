.order_history
  .tittle_box
    .tittle_content.uppercase.text.font22= I18n.t('content.page.account_order_his.step')
  .line
  - if @orders
    %table.your_order_history_table
      %thead.table_headers
        %tr.uppercase.his_title
          %th.order_header= I18n.t('content.page.account_order_his.order')
          %th.date_header= I18n.t('content.page.account_order_his.date')
          %th.recipient_header= I18n.t('content.page.account_order_his.recipient')
          %th.child_header= I18n.t('content.page.account_order_his.child')
          %th.plan_header= I18n.t('content.page.account_order_his.plan')
      %tbody.table_rows
        - @orders.each_with_index do |order, index|
          %tr{:class=>"row_number_#{index}"}
            %td.order_column= link_to order.order_code, order_history_detail_users_path(:order_id => order.id, :order_type => order.order_type), :class => 'underline-link'
            %td.date_column
              - if order.transaction_date
                = order.transaction_date.strftime("%m/%d/%Y")
            %td.recipient_column
              - if order.shipping_address_id
                = truncate(get_shipping_fullname(order.shipping_address_id),:length => 16, :omission => "...")
            %td.child_column
              - if order.baby_id
                = truncate(get_child_name(order.baby_id),:length => 16,:omission => "...")
            %td.plan_column= Order::TYPE_NAME[order.plan_type]

