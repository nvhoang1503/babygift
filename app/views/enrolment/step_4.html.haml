.page_content_space
  = render 'steps_nav'
  = simple_form_for @order, :as => :plan, :url => shipping_info_enrolments_path, :html => {:class => "enroll-form", :id => 'plan-addresses'}, :validate => :addresses_validator do |f|
    .tittle_content= I18n.t('content.page.enroll_4.title')

    .shipping-address.pull-left
      = render 'shared/form_shipping', :form_builder => f
      = f.input :ship_to_billing, :as => :boolean, :label => '<span>Use same address for billing</span>'.html_safe, :input_html => {:checked => (@order.shipping_address_id == @order.billing_address_id), :class => 'pull-left' }, :wrapper_html => { :id => 'ship_to_billing' }

    .billing-address.pull-right
      = render 'shared/form_billing', :form_builder => f
    .clearfix
    .form-action.pull-left.shipping_continue
      = f.submit I18n.t('label.button.continue', :next_step => 'payment'), :id => 'btn-submit', :class => 'mybtn next btn-pink uppercase btn_shipping_form'

= render 'shared/submit_form', :btn_form => '.btn_shipping_form'
= content_for :js do
  = yield :addresses_validator
  = javascript_include_tag 'enrolment.js'
