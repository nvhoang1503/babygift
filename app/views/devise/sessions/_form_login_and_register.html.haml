.login_box.pull-left
  .title_login.login_left_space= I18n.t('content.page.login.login', :login_text => login_text)
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :validate => :user_validator) do |f|
    .form-inputs
      = f.input :email, :required => false, :wrapper_html => {:class => 'login_email_field'}
      = f.input :password, :required => false

      - if flash[:alert] == I18n.t('message.email_pass_invalid') or flash[:alert] ==I18n.t('message.admin_invalid')
        %span#exsting_email.error= flash[:alert]
      .foget_pass
        = link_to I18n.t('content.page.login.forgot_pass'), new_password_path(resource_name), :class => 'underline-link'
      .remember_box.clearfix
        = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      = hidden_field_tag 'submit_from', @submit_from
      - if @submit_from==SessionsController::ENROLMENT_RECEIVE and @order.id
        = hidden_field_tag 'order_id', @order.id
      - if @submit_from==SessionsController::REDEEM_RECEIVE and @redeem.id
        = hidden_field_tag 'redeem_id', @redeem.id

    = f.button :submit, I18n.t('content.page.login.sign_in') , :class => "mybtn btn-pink btn_login uppercase"

- if @submit_from!=SessionsController::ADMIN_RECEIVE
  .register_box.pull-right
    .title_login= I18n.t('content.page.login.welcome')
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => :user_validator) do |f|
      .form-inputs
        = f.input :email, :input_html => {:id => "user_mail_register"}, :wrapper_html => {:class => 'register_email_field'}
        .register_email_conform_field
          %label
            %abbr{:title => "required"} *
            = I18n.t('content.page.login.email_confirm')
          %input{:type => 'text' , :id => 'email_register_conform'}
        = f.input :password,:required => true, :input_html => {:id => "user_passwork_register"}
        = f.input :password_confirmation,:required => true, :input_html => {:id => "user_passwork_confirm_register"}, :label => I18n.t('content.page.login.pass_confirm')
        = hidden_field_tag 'submit_from', @submit_from
        - if @submit_from==RegistrationsController::ENROLMENT_RECEIVE and @order.id
          = hidden_field_tag 'order_id', @order.id
        - if @submit_from==RegistrationsController::REDEEM_RECEIVE and @redeem.id
          = hidden_field_tag 'redeem_id', @redeem.id
      = f.button :submit, I18n.t('content.page.login.join') , :class => "mybtn btn-pink btn_register uppercase"

= render 'shared/submit_form', :btn_form => '.btn_login'

- if params[:controller] == "registrations"
  :css
    .login_box span.error{
      display:none !important;
    }

:css
  #flash-panel .alert{
    display:none;
  }
= content_for :js do
  = yield :user_validator
  = javascript_include_tag 'register.js'

