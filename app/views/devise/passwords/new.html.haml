#forgot_pass_box.page_content_space.clear-fix
  .title_page Forgot your password?
  .forgot_box
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :validate => :user_validator , :html => { :method => :post }) do |f|
      / = f.error_notification
      .form-inputs
        = f.input :email, :required => true, :wrapper_html => {:class => 'login_email_field'}
      .form-actions
        = f.button :submit, "Send" , :class => "mybtn btn-pink btn_forgot uppercase"

= content_for :js do
  = yield :user_validator
  = javascript_include_tag 'register.js'
