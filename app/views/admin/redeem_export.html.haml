%table{:border => "1"}
  %tr{:style => 'font-weight: bold;'}
    %th.text.bold.font26 No
    %th First name
    %th Last name
    %th Email Recipient
    %th Redeem Date
    %th Child
    %th Plan
    %th Shipping
    %th Status
    %th Order #
  - @redeems.each_with_index do |redeem, index|
    %tr
      %td= index + 1
      %td
        - if redeem.shipping_address
          = redeem.shipping_address.first_name
      %td
        - if redeem.shipping_address
          = redeem.shipping_address.last_name
      %td= redeem.recipient_email
      %td
        = redeem.redeem_date.strftime("%m/%d/%Y") if redeem.redeem_date
      %td
        = redeem.baby.fullname if redeem.baby
      %td= Order::TYPE_NAME[redeem.plan_type]
      %td
        - if redeem.shipping_address
          = redeem.shipping_address.address_full
          - if redeem.shipping_address.address_2
            %br
            = redeem.shipping_address.address2_full
      %td
        - if redeem.redeem_status.to_i == Redeem::STATUS[:completed].to_i
          Redeemed
        - else
          Pending
      %td= redeem.order_code
